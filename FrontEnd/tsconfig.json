{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~*": [
        "./*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/migrating"
  ]
}